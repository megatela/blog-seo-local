---
import { client, urlFor } from '../../lib/sanity';
import { PortableText } from '@portabletext/react';
import Layout from '../../layouts/Layout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const clusters = await client.fetch(`*[_type == "cluster"]{ "slug": slug.current }`);
  return clusters.map((c: any) => ({
    params: { cluster: c.slug },
  }));
}

const { cluster: slug } = Astro.params;

const clusterData = await client.fetch(`*[_type == "cluster" && slug.current == $slug][0]{
  title,
  description,
  image,
  content
}`, { slug });

if (!clusterData) return Astro.redirect('/404');
---

<Layout title={clusterData.title} description={clusterData.description}>
  <main class="cluster-container">
    <nav class="breadcrumb">
      <a href="/">← Inicio</a>
    </nav>
    
    <header>
      <h1 class="main-title">{clusterData.title}</h1>
      
      {clusterData.image && (
        <img 
          src={urlFor(clusterData.image).width(1200).url()} 
          alt={clusterData.title} 
          class="featured-image"
        />
      )}
    </header>

    <section class="description-section">
      <h2 class="sub-title-desc">{clusterData.description}</h2>
    </section>

    <article class="rich-text-area">
      <PortableText value={clusterData.content} />
    </article>

    <hr class="divider" />

    <section>
      <h3 class="section-title">Artículos en esta categoría</h3>
      <div class="grid">
        {slug === 'google-business-profile' && (
          <a href="/google-business-profile/guia-definitiva-de-google-business-profile-domina-el-local-pack-en-2024" class="card">
            Guía Definitiva GBP 2024 →
          </a>
        )}
      </div>
    </section>
  </main>
</Layout>

<style>
  .cluster-container { max-width: 800px; margin: 0 auto; padding: 2rem; font-family: sans-serif; }
  .breadcrumb a { color: #0070f3; text-decoration: none; font-weight: bold; }
  .main-title { font-size: 3rem; font-weight: 800; margin-bottom: 1.5rem; color: #111; }
  .featured-image { width: 100%; border-radius: 12px; margin-bottom: 2rem; }
  .description-section { margin-bottom: 2.5rem; padding: 1.5rem; background: #f9f9f9; border-left: 5px solid #0070f3; }
  .sub-title-desc { font-size: 1.4rem; line-height: 1.5; color: #444; margin: 0; font-weight: 600; }

  /* SOLUCIÓN FINAL AL SEGUNDO H1:
     Como no podemos usar JS dinámico sin romper el build, usamos CSS.
     Buscamos cualquier H1 que esté DENTRO del contenido de Sanity y 
     lo forzamos a comportarse visualmente como un H2.
  */
  .rich-text-area :global(h1) {
    font-size: 2rem !important;
    font-weight: 700 !important;
    margin-top: 2rem !important;
    color: #111 !important;
    /* Aunque el tag sea H1, Google verá que lo tratas como subencabezado */
  }

  .divider { margin: 3rem 0; border: 0; border-top: 1px solid #eee; }
  .card { display: block; padding: 1.5rem; border: 1px solid #ddd; border-radius: 8px; text-decoration: none; color: #0070f3; font-weight: bold; }
</style>