---
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    { params: { cluster: 'google-business-profile' }, props: { title: "Google Business Profile Masterclass", description: "Aprende a optimizar tu ficha." } },
    { params: { cluster: 'factores-ranking' }, props: { title: "Factores de Ranking Local", description: "Análisis de los factores." } },
    { params: { cluster: 'seo-vertical' }, props: { title: "SEO Local Vertical", description: "Estrategias por Nicho." } },
    { params: { cluster: 'herramientas' }, props: { title: "Herramientas SEO Local", description: "Stack tecnológico." } },
    { params: { cluster: 'casos-de-exito' }, props: { title: "Casos de Éxito", description: "Resultados reales." } },
    { params: { cluster: 'ai-seo' }, props: { title: "AI Local Search", description: "Futuro del SEO." } }
  ];
}

const { cluster } = Astro.params;
const { title, description } = Astro.props;
---

<Layout title={title} description={description}>
  <main style="max-width: 900px; margin: 0 auto; padding: 60px 20px; font-family: system-ui, sans-serif;">
    
    <nav style="margin-bottom: 30px; font-size: 0.95rem; color: #666;">
      <a href="/" style="color: #0070f3; text-decoration: none;">Inicio</a>
      <span style="margin: 0 8px;">&gt;</span>
      <a href={`/${cluster}/`} style="color: #0070f3; text-decoration: none; font-weight: 600; text-transform: capitalize;">
        {cluster.replace(/-/g, ' ')}
      </a>
      <span style="margin: 0 8px;">&gt;</span>
      <span style="color: #999;">Artículos</span>
    </nav>

    <header style="margin-bottom: 60px;">
      <h1 style="font-size: 3rem; font-weight: 800; color: #111; margin-bottom: 20px;">
        {title}
      </h1>
      <p style="font-size: 1.25rem; color: #666;">
        Explora nuestros artículos sobre <strong>{cluster.replace(/-/g, ' ')}</strong>.
      </p>
    </header>

    <section style="background: #f8f9fa; border: 1px solid #eaeaea; border-radius: 24px; padding: 40px;">
      <h2 style="font-size: 1.5rem; margin-bottom: 30px;">Contenido disponible</h2>
      
      <div style="display: grid; gap: 20px;">
        {cluster === 'google-business-profile' ? (
          <a href="/google-business-profile/guia-definitiva-de-google-business-profile-domina-el-local-pack-en-2024" style="display: block; background: white; padding: 25px; border-radius: 16px; text-decoration: none; border: 1px solid #eee;">
            <h3 style="color: #0070f3; margin-bottom: 10px;">Guía Definitiva GBP 2024 →</h3>
            <p style="color: #666;">Manual pilar para optimizar tu ficha.</p>
          </a>
        ) : (
          <p style="text-align: center; color: #999;">Próximamente más contenido.</p>
        )}
      </div>
    </section>
  </main>
</Layout>