---
import { client, urlFor } from '../../lib/sanity';
import { PortableText } from '@portabletext/react';
import Layout from '../../layouts/Layout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const clusters = await client.fetch(`*[_type == "cluster"]{ "slug": slug.current }`);
  return clusters.map((c: any) => ({
    params: { cluster: c.slug },
  }));
}

const { cluster: slug } = Astro.params;

const clusterData = await client.fetch(`*[_type == "cluster" && slug.current == $slug][0]{
  title,
  description,
  image,
  content
}`, { slug });

if (!clusterData) return Astro.redirect('/404');
---

<Layout title={clusterData.title} description={clusterData.description}>
  <main class="cluster-main">
    <nav class="breadcrumb">
      <a href="/">← Inicio</a>
    </nav>
    
    <header>
      <h1 class="main-title">{clusterData.title}</h1>
      
      {clusterData.image && (
        <img 
          src={urlFor(clusterData.image).width(1200).url()} 
          alt={clusterData.title} 
          class="header-img"
        />
      )}
    </header>

    <div class="description-box">
      {clusterData.description}
    </div>

    <article class="rich-text-content">
      <PortableText value={clusterData.content} />
    </article>

    <hr class="divider" />

    <section>
      <h2>Artículos detallados</h2>
      <div class="posts-grid">
        {slug === 'google-business-profile' && (
          <a href="/google-business-profile/guia-definitiva-de-google-business-profile-domina-el-local-pack-en-2024" class="card">
            Guía Definitiva GBP 2024 →
          </a>
        )}
      </div>
    </section>
  </main>
</Layout>

<style>
  .cluster-main { max-width: 800px; margin: 0 auto; padding: 2rem; font-family: system-ui, sans-serif; }
  .breadcrumb a { color: #0070f3; text-decoration: none; font-weight: bold; }
  .main-title { font-size: 2.8rem; margin-bottom: 1.5rem; color: #111; }
  .header-img { width: 100%; border-radius: 12px; margin-bottom: 2rem; }
  .description-box { font-size: 1.2rem; color: #555; border-left: 4px solid #0070f3; padding-left: 1.5rem; margin-bottom: 2.5rem; }
  
  /* ESTO ELIMINA EL SEGUNDO H1 VISUALMENTE SI VIENE DE SANITY */
  .rich-text-content :global(h1) {
    font-size: 1.8rem; /* Tamaño de un H2 */
    font-weight: 700;
    margin-top: 2rem;
    color: #333;
    display: block;
  }
</style>