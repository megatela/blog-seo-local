---
import { client, urlFor } from '../../lib/sanity';
import { PortableText } from '@portabletext/react';
import Layout from '../../layouts/Layout.astro';

// Forzamos que la página sea estática para mejor SEO y velocidad
export const prerender = true;

export async function getStaticPaths() {
  const clusters = await client.fetch(`*[_type == "cluster"]{ "slug": slug.current }`);
  return clusters.map((c: any) => ({
    params: { cluster: c.slug },
  }));
}

const { cluster: slug } = Astro.params;

const clusterData = await client.fetch(`*[_type == "cluster" && slug.current == $slug][0]{
  title,
  description,
  image,
  content
}`, { slug });

if (!clusterData) return Astro.redirect('/404');
---

<Layout title={clusterData.title} description={clusterData.description}>
  <main style="max-width: 800px; margin: 0 auto; padding: 2rem; font-family: system-ui, sans-serif;">
    
    <nav style="margin-bottom: 2rem;">
      <a href="/" style="color: #0070f3; text-decoration: none; font-weight: bold;">← Inicio</a>
    </nav>
    
    <header>
      <h1 style="font-size: 3rem; font-weight: 800; margin-bottom: 1.5rem; color: #111;">
        {clusterData.title}
      </h1>
      
      {clusterData.image && (
        <img 
          src={urlFor(clusterData.image).width(1200).url()} 
          alt={clusterData.title} 
          style="width: 100%; height: auto; border-radius: 12px; margin-bottom: 2rem; box-shadow: 0 4px 20px rgba(0,0,0,0.1);"
        />
      )}
    </header>

    <div style="font-size: 1.2rem; color: #555; border-left: 4px solid #0070f3; padding-left: 1.5rem; margin-bottom: 2.5rem; line-height: 1.6;">
      {clusterData.description}
    </div>

    <article class="sanity-content" style="line-height: 1.8; font-size: 1.15rem; color: #333;">
      <PortableText value={clusterData.content} />
    </article>

    <hr style="margin: 3rem 0; border: 0; border-top: 1px solid #eee;" />

    <section>
      <h2 style="font-size: 1.8rem; margin-bottom: 1.5rem;">Artículos en esta categoría</h2>
      <div style="display: grid; gap: 1rem;">
        {slug === 'google-business-profile' && (
          <a href="/google-business-profile/guia-definitiva-de-google-business-profile-domina-el-local-pack-en-2024" 
             style="display: block; padding: 1.5rem; border: 1px solid #ddd; border-radius: 12px; text-decoration: none; color: #0070f3; font-weight: bold; transition: border-color 0.2s;">
            Guía Definitiva GBP 2024 →
          </a>
        )}
      </div>
    </section>
  </main>
</Layout>

<style>
  /* SEGURIDAD SEO: Si Sanity inyecta un H1 por error, lo forzamos a parecer un párrafo o H2 */
  .sanity-content :global(h1) {
    font-size: 1.8rem !important;
    display: block !important;
    margin-top: 2rem !important;
    color: #111 !important;
  }
</style>