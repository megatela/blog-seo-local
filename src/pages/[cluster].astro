---
import { client, urlFor } from '../lib/sanity';
import { PortableText } from '@portabletext/react';
import Layout from '../layouts/Layout.astro';
import { createElement } from 'react';

export const prerender = false;

const { cluster: slug } = Astro.params;

// 1. QUERY TODOTERRENO (Va en la parte superior, entre las líneas ---)
const data = await client.fetch(
  `{
    "cluster": *[_type == "cluster" && slug.current == $slug][0]{
      title,
      description,
      content,
      mainImage,
      "imageUrl": mainImage.asset->url
    },
    "posts": *[_type == "post" && cluster->slug.current == $slug] | order(_createdAt asc)
  }`,
  { slug }
);

if (!data.cluster) return Astro.redirect('/404');

// Lógica de rescate para la imagen
const finalImage = data.cluster?.imageUrl || 
                   (data.cluster?.mainImage ? urlFor(data.cluster.mainImage).url() : null);

const components = {
  block: {
    h2: ({children}: any) => createElement('h2', { className: 'text-3xl md:text-4xl font-black text-slate-900 mt-16 mb-6 border-l-4 border-blue-600 pl-4' }, children),
    h3: ({children}: any) => createElement('h3', { className: 'text-2xl font-bold text-slate-800 mt-10 mb-4' }, children),
    normal: ({children}: any) => createElement('p', { className: 'text-lg text-slate-600 leading-relaxed mb-6' }, children),
  },
};
---

<Layout title={data.cluster.title}>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <article class="bg-white min-h-screen">
    <header class="bg-slate-900 pt-32 pb-20 px-6 relative">
      <div class="max-w-4xl mx-auto relative z-10">
        <nav class="flex items-center space-x-2 text-blue-400 text-xs font-black uppercase mb-10">
          <a href="/">Inicio</a>
          <span class="text-slate-600">/</span>
          <span class="text-slate-400">Guía Pilar</span>
        </nav>
        
        <h1 class="text-5xl md:text-8xl font-black text-white leading-none mb-10 tracking-tighter">
          {data.cluster.title}
        </h1>

        <div class="relative mt-16">
          {finalImage ? (
            <div class="rounded-[2.5rem] overflow-hidden shadow-2xl border-4 border-slate-800">
              <img 
                src={finalImage} 
                alt={data.cluster.title}
                class="w-full h-[350px] md:h-[550px] object-cover"
              />
            </div>
          ) : (
            <div class="h-[300px] bg-slate-800 rounded-[2.5rem] flex items-center justify-center border-2 border-dashed border-slate-700 text-slate-500 font-bold px-10 text-center">
               No hay imagen vinculada en Sanity para "{data.cluster.title}"
            </div>
          )}
        </div>
      </div>
    </header>

    <main class="max-w-4xl mx-auto py-24 px-6">
      <div class="prose max-w-none">
        <PortableText value={data.cluster.content} components={components} />
      </div>

      <section class="mt-40">
        <h2 class="text-4xl font-black text-slate-900 mb-12 uppercase tracking-tighter">Artículos Relacionados</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          {data.posts.map((post) => (
            <a href={`/${slug}/${post.slug.current}`} class="group bg-slate-50 p-10 rounded-[2rem] hover:bg-white hover:shadow-2xl transition-all border border-transparent hover:border-slate-100">
              <h3 class="text-2xl font-black text-slate-800 group-hover:text-blue-600 mb-4">{post.title}</h3>
              <span class="text-blue-600 font-bold text-xs uppercase tracking-widest">Leer más →</span>
            </a>
          ))}
        </div>
      </section>
    </main>
  </article>
</Layout>