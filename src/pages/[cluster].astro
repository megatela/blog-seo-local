---
import { client, urlFor } from '../lib/sanity';
import { PortableText } from '@portabletext/react';
import Layout from '../layouts/Layout.astro';

export const prerender = false;

const { cluster: slug } = Astro.params;

// 1. Query Completa: Traemos los datos del clúster (incluyendo contenido largo e imagen) y sus posts
const data = await client.fetch(
  `{
    "cluster": *[_type == "cluster" && slug.current == $slug][0]{
      title,
      description,
      mainImage,
      content // Este es el campo "Contenido de la Guía Pilar" de tu captura
    },
    "posts": *[_type == "post" && cluster->slug.current == $slug] | order(_createdAt desc)
  }`,
  { slug }
);

if (!data.cluster) return Astro.redirect('/404');

// Componentes para el PortableText (puedes añadir más si usas h2, h3, etc)
const components = {
  block: {
    h1: 'h1',
    h2: 'h2',
    h3: 'h3',
    normal: 'p',
  }
};
---

<Layout title={data.cluster.title}>
  <article class="max-w-4xl mx-auto py-12 px-6">
    <nav class="text-sm text-gray-500 mb-8">
      <a href="/" class="hover:text-blue-600">Inicio</a> / <span class="text-gray-900">{data.cluster.title}</span>
    </nav>

    <header class="mb-12">
      <h1 class="text-4xl md:text-6xl font-black mb-8 leading-tight">{data.cluster.title}</h1>
      
      {data.cluster.mainImage && (
        <img 
          src={urlFor(data.cluster.mainImage).width(1200).url()} 
          alt={data.cluster.title}
          class="w-full rounded-2xl shadow-lg mb-10"
        />
      )}
    </header>

    <section class="prose prose-lg max-w-none rich-text mb-20">
      {data.cluster.content ? (
        <PortableText value={data.cluster.content} components={components} />
      ) : (
        <p class="text-gray-500 italic">No hay contenido redactado para esta guía pilar todavía.</p>
      )}
    </section>

    <hr class="border-gray-200 mb-16" />

    <section>
      <h2 class="text-3xl font-bold mb-8">Artículos Relacionados</h2>
      
      {data.posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {data.posts.map((post) => (
            <a href={`/${slug}/${post.slug.current}`} class="group p-6 bg-gray-50 rounded-xl border border-transparent hover:border-blue-500 hover:bg-white transition-all shadow-sm">
              <h3 class="text-xl font-bold group-hover:text-blue-600 mb-2">{post.title}</h3>
              <p class="text-gray-600 text-sm line-clamp-2">Lee más sobre este tema en nuestro blog especializado.</p>
            </a>
          ))}
        </div>
      ) : (
        <p class="text-gray-500">Próximamente más artículos en este clúster.</p>
      )}
    </section>
  </article>
</Layout>

<style>
  /* Estilos para que el contenido de Sanity se vea impecable */
  .rich-text :global(h2) { font-size: 2.25rem; font-weight: 800; margin-top: 3rem; margin-bottom: 1.5rem; color: #111; }
  .rich-text :global(p) { margin-bottom: 1.5rem; line-height: 1.8; font-size: 1.125rem; color: #374151; }
  .rich-text :global(ul) { list-style-type: disc; margin-left: 1.5rem; margin-bottom: 1.5rem; }
  .rich-text :global(li) { margin-bottom: 0.5rem; }
</style>