---
import { client } from '../lib/sanity';
import { PortableText } from '@portabletext/react';
import Layout from '../layouts/Layout.astro';
import { createElement } from 'react';

export const prerender = false;

const { cluster: slug } = Astro.params;

const data = await client.fetch(
  `{
    "cluster": *[_type == "cluster" && slug.current == $slug][0],
    "posts": *[_type == "post" && cluster->slug.current == $slug] | order(_createdAt asc)
  }`,
  { slug }
);

if (!data.cluster) return Astro.redirect('/404');

// --- LÓGICA DE DETECCIÓN REFORZADA ---
// Filtramos para que NO tome el contenido largo del post como descripción
const allStrings = Object.values(data.cluster).filter(v => typeof v === 'string');
const detectedDesc = data.cluster.description || data.cluster.seoDescription || data.cluster.descriptionSEO || 
                     allStrings.find(v => v.length > 35 && v.length < 500 && v !== data.cluster.title) || "";

const imgObj = data.cluster.mainImage || data.cluster.imagenPortada || data.cluster.image || {};
const imageUrl = data.cluster.imageUrl || (imgObj.asset ? `https://cdn.sanity.io/images/qv6q15su/production/${imgObj.asset._ref.replace('image-', '').replace('-webp', '.webp').replace('-png', '.png').replace('-jpg', '.jpg')}` : null);
const detectedAlt = imgObj.alt || imgObj.altText || imgObj.textAlt || data.cluster.title;

const components = {
  block: {
    h2: ({children}: any) => createElement('h2', { className: 'text-3xl md:text-4xl font-black text-slate-900 mt-16 mb-6 border-l-8 border-blue-600 pl-6' }, children),
    normal: ({children}: any) => createElement('p', { className: 'text-lg md:text-xl text-slate-600 leading-relaxed mb-8' }, children),
  },
};
---

<Layout title={data.cluster.title}>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <article class="bg-white min-h-screen">
    <header class="bg-slate-900 pt-32 pb-24 px-6 relative">
      <div class="max-w-5xl mx-auto">
        <nav class="flex items-center space-x-2 text-blue-400 text-xs font-black uppercase mb-12 tracking-widest">
          <a href="/">Inicio</a> <span class="text-slate-700">/</span> <span class="text-slate-400">Pilar</span>
        </nav>
        
        <h1 class="text-5xl md:text-8xl font-black text-white leading-none mb-8 tracking-tighter uppercase">{data.cluster.title}</h1>

        {detectedDesc && (
          <p class="text-xl md:text-2xl text-slate-400 max-w-3xl mb-16 leading-relaxed italic font-light">
            {detectedDesc}
          </p>
        )}

        {imageUrl && (
          <div class="relative mt-12 rounded-[2.5rem] overflow-hidden shadow-2xl border-8 border-slate-800">
            <img src={imageUrl} alt={detectedAlt} class="w-full h-[400px] md:h-[600px] object-cover" />
          </div>
        )}
      </div>
    </header>

    <main class="max-w-4xl mx-auto py-24 px-6">
      <div class="prose prose-slate prose-xl max-w-none">
        <PortableText value={data.cluster.content} components={components} />
      </div>

      <section class="mt-40 border-t pt-24">
        <h2 class="text-4xl font-black text-slate-900 mb-12 uppercase tracking-tighter">Artículos Específicos</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {data.posts.map((post: any) => (
            <a href={`/${slug}/${post.slug.current}`} class="group bg-slate-50 p-10 rounded-[2rem] hover:bg-white hover:shadow-2xl transition-all border border-transparent hover:border-slate-100">
              <h3 class="text-2xl font-black text-slate-800 group-hover:text-blue-600 mb-6">{post.title}</h3>
              <span class="text-blue-600 font-bold text-xs uppercase tracking-widest">Leer más →</span>
            </a>
          ))}
        </div>
      </section>
    </main>
  </article>
</Layout>
