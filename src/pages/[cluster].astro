---
import { client, urlFor } from '../lib/sanity';
import { PortableText } from '@portabletext/react';
import Layout from '../layouts/Layout.astro';
import { createElement } from 'react';

export const prerender = false;
const { cluster } = Astro.params;

// QUERY: Traemos el clúster y sus posts dependientes
const data = await client.fetch(`*[_type == "cluster" && slug.current == $cluster][0]{
  title,
  description,
  image,
  content,
  "posts": *[_type == "post" && references(^._id)]{
    title,
    "slug": slug.current,
    metaDescription
  }
}`, { cluster });

if (!data) return Astro.redirect('/404');

const components = {
  block: {
    h2: ({children}: any) => createElement('h2', { className: 'text-3xl md:text-5xl font-black text-slate-900 mt-16 mb-8 uppercase tracking-tighter border-l-8 border-blue-600 pl-6' }, children),
    h3: ({children}: any) => createElement('h3', { className: 'text-2xl font-bold text-slate-800 mt-12 mb-6' }, children),
    normal: ({children}: any) => createElement('p', { className: 'text-lg md:text-xl text-slate-600 leading-relaxed mb-8' }, children),
  }
};

const labels = ["Metodología Exclusiva", "Continúa tu formación", "Estrategia de Crecimiento", "Análisis de Experto"];
---

<Layout title={data.title} description={data.description}>
  
  <div class="reading-progress-container">
    <div class="progress-bar" id="readingBar"></div>
  </div>

  <article class="post-wrapper">
    <nav class="post-nav">
      <div class="content-limit">
        <a href="/" class="hover:text-blue-600 transition-colors">Inicio</a> / 
        <span class="current-crumb">{data.title}</span>
      </div>
    </nav>

    <main class="content-limit py-10">
      
      {data.image?.asset && (
        <div class="image-container mb-12">
          <img 
            src={urlFor(data.image).width(1200).url()} 
            alt={data.image.alt || data.title} 
            class="main-image-hero" 
          />
        </div>
      )}

      <header class="mb-16">
        <h1 class="text-5xl md:text-8xl font-black uppercase tracking-tighter leading-[0.8] mb-8 text-slate-900">
          {data.title}
        </h1>
        <p class="text-2xl text-slate-500 font-medium leading-tight">{data.description}</p>
      </header>

      <hr class="post-divider" />

      <div class="article-body mb-20">
        {data.content && <PortableText value={data.content} components={components} />}
      </div>

      {data.posts && data.posts.length > 0 && (
        <section class="related-area">
          <h2 class="related-heading tracking-tighter">Guías de <br/> <span class="text-blue-600">Especialización</span></h2>
          <div class="related-grid">
            {data.posts.map((post: any) => {
              const randomLabel = labels[Math.floor(Math.random() * labels.length)];
              return (
                <a href={`/${cluster}/${post.slug}`} class="rel-card group">
                  <span class="rel-tag">{randomLabel}</span>
                  <h3 class="rel-title group-hover:text-blue-600 transition-colors">{post.title}</h3>
                  <p class="text-slate-500 mb-6 leading-snug">{post.metaDescription}</p>
                  <span class="rel-link">Acceder ahora →</span>
                </a>
              );
            })}
          </div>
        </section>
      )}
    </main>
  </article>

  <script is:inline>
    window.onscroll = function() {
      const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      const bar = document.getElementById("readingBar");
      if (bar) bar.style.width = scrolled + "%";
    };
  </script>
</Layout>

<style>
  .post-wrapper { background: white; min-height: 100vh; }
  .content-limit { max-width: 850px; margin: 0 auto; padding: 0 1.5rem; }
  
  .reading-progress-container { position: fixed; top: 0; left: 0; width: 100%; height: 6px; z-index: 9999; background: #f1f5f9; }
  .progress-bar { height: 100%; background: #2563eb; width: 0%; transition: width 0.1s ease-out; }

  .post-nav { background: #fafafa; padding: 1.2rem 0; border-bottom: 1px solid #eee; margin-bottom: 2rem; font-size: 0.85rem; font-weight: 700; text-transform: uppercase; color: #888; letter-spacing: 1px; }
  .current-crumb { color: #ccc; }

  .main-image-hero { width: 100%; border-radius: 40px; box-shadow: 0 30px 60px -12px rgba(0,0,0,0.15); object-fit: cover; }
  .post-divider { border: 0; border-top: 3px solid #f1f5f9; margin: 4rem 0; max-width: 100px; }
  
  .article-body :global(p) { margin-bottom: 2.5rem; font-size: 1.25rem; color: #475569; line-height: 1.8; }

  /* SECCIÓN RELACIONADOS */
  .related-area { margin-top: 6rem; border-top: 1px solid #eee; padding-top: 5rem; }
  .related-heading { font-size: 3rem; font-weight: 900; text-transform: uppercase; margin-bottom: 4rem; line-height: 0.9; }
  .related-grid { display: grid; gap: 2rem; }
  .rel-card { background: #f8fafc; padding: 3rem; border-radius: 40px; text-decoration: none; border: 2px solid transparent; transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
  .rel-card:hover { border-color: #2563eb; background: white; transform: translateY(-10px); box-shadow: 0 30px 60px rgba(0,0,0,0.05); }
  .rel-tag { color: #2563eb; font-weight: 900; text-transform: uppercase; font-size: 0.75rem; display: block; margin-bottom: 1rem; letter-spacing: 1px; }
  .rel-title { font-size: 1.8rem; font-weight: 800; color: #0f172a; margin-bottom: 1rem; line-height: 1.2; }
  .rel-link { font-weight: 700; color: #2563eb; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 0.5px; }
</style>
