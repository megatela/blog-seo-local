---
import { client, urlFor } from '../../lib/sanity'; 
import { PortableText } from '@portabletext/react';
import Layout from '../../layouts/Layout.astro';

export const prerender = false;
const { slug } = Astro.params;

const caseStudy = await client.fetch(`*[_type == "caseStudy" && slug.current == $slug][0]{
  title,
  metaDescription,
  mainImage { asset, alt },
  content,
  metrics
}`, { slug });

if (!caseStudy) return Astro.redirect('/404');
---

<Layout title={caseStudy.title} description={caseStudy.metaDescription}>
  <div id="reading-progress"></div>

  <article class="case-study-container">
    <nav class="breadcrumbs">
      <a href="/">Inicio</a> / <a href="/blog">Blog</a> / <span>Caso de Éxito</span>
    </nav>

    <header class="case-header">
      <span class="badge">Resultados Reales</span>
      <h1>{caseStudy.title}</h1>
      <p class="description">{caseStudy.metaDescription}</p>
    </header>

    {caseStudy.mainImage && (
      <div class="main-image-wrapper">
        <img src={urlFor(caseStudy.mainImage.asset).width(1200).url()} alt={caseStudy.mainImage.alt} />
      </div>
    )}

    {caseStudy.metrics && (
      <div class="metrics-grid">
        {caseStudy.metrics.map((m: any) => (
          <div class="metric-card">
            <span class="metric-value">{m.value}</span>
            <span class="metric-label">{m.label}</span>
          </div>
        ))}
      </div>
    )}

    <div class="content-wrapper">
      <div class="prose">
        <PortableText value={caseStudy.content} />
      </div>
    </div>

    <footer class="case-footer">
      <h2>¿Quieres resultados similares?</h2>
      <p>Analizamos tu negocio local y trazamos un plan de acción real.</p>
      <a href="/contactame" class="cta-button">SOLICITAR AUDITORÍA GRATIS <span>→</span></a>
    </footer>
  </article>
</Layout>

<style>
  /* FIX DE ALINEACIÓN Y CENTRADO */
  .case-study-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: system-ui, -apple-system, sans-serif;
    color: #1a202c;
  }

  #reading-progress {
    position: fixed;
    top: 0;
    left: 0;
    height: 5px;
    background: #2563eb;
    z-index: 10000;
    width: 0%;
  }

  .breadcrumbs {
    font-size: 14px;
    color: #718096;
    margin-bottom: 40px;
  }

  .case-header {
    margin-bottom: 60px;
  }

  .badge {
    background: #ebf8ff;
    color: #2b6cb0;
    padding: 4px 12px;
    border-radius: 99px;
    font-size: 12px;
    font-weight: 800;
    text-transform: uppercase;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    line-height: 1.1;
    margin: 20px 0;
    letter-spacing: -0.02em;
  }

  .description {
    font-size: 1.25rem;
    color: #4a5568;
    border-left: 4px solid #2563eb;
    padding-left: 20px;
    font-style: italic;
  }

  .main-image-wrapper img {
    width: 100%;
    border-radius: 24px;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    margin-bottom: 60px;
  }

  /* GRID DE MÉTRICAS */
  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 20px;
    margin-bottom: 80px;
  }

  .metric-card {
    background: #f7fafc;
    border: 1px solid #edf2f7;
    padding: 30px;
    border-radius: 20px;
    text-align: center;
  }

  .metric-value {
    display: block;
    font-size: 2.5rem;
    font-weight: 900;
    color: #2563eb;
  }

  .metric-label {
    font-size: 11px;
    font-weight: 700;
    color: #718096;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* CONTENIDO */
  .content-wrapper {
    line-height: 1.8;
    font-size: 1.15rem;
  }

  .case-footer {
    margin-top: 100px;
    background: #1a202c;
    color: white;
    padding: 60px 40px;
    border-radius: 40px;
    text-align: center;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    background: #2563eb;
    color: white;
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    margin-top: 30px;
    transition: transform 0.2s;
  }

  .cta-button:hover { transform: scale(1.05); }
</style>

<script is:inline>
  window.addEventListener('scroll', () => {
    const bar = document.getElementById('reading-progress');
    const scroll = window.scrollY;
    const height = document.documentElement.scrollHeight - window.innerHeight;
    bar.style.width = (scroll / height) * 100 + '%';
  });
</script>
